---
import Layout from '../layouts/Layout.astro';
---

<Layout Title="Local Storage Test">
	<main class="min-h-screen bg-base-200 py-8 px-4 flex flex-col justify-center items-center">
        <h1 class="text-2xl font-bold">Local Storage Test</h1>
        <div class="my-8 text-center" x-data="{
            userEmail: '',
            taggedEmails: [],
            getLocalStorage(){
                this.userEmail = localStorage.getItem('userEmail');
                if (this.userEmail === null) { 
                    this.userEmail = 'No email is stored';
                };
                
            }
        }"
        x-init="getLocalStorage()">
            <h2 class="text-lg">User Email:</h2>
            <p x-text="userEmail"></p>
            <h2 class="text-lg">Tagged Emails:</h2>
            
            <button class="btn btn-primary mt-4" @click="localStorage.clear(); getLocalStorage()">Clear all local storage</button>
        </div>
    </main>
</Layout>