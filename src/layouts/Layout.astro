---
import "../assets/styles.css";
import AstroSEO from "../components/AstroSEO.astro";
import { SimpleAnalytics} from "astro-analytics";
const { Title, Description, NoIndex, NoFollow } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<AstroSEO Title={Title} Description={Description} NoIndex={NoIndex} NoFollow={NoFollow} />
		<!-- <SimpleAnalytics /> -->
		<script data-collect-dnt="true" async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
		<script data-collect-dnt="true" async src="https://scripts.simpleanalyticscdn.com/auto-events.js"></script>
		<script data-collect-dnt="true" async src="https://scripts.simpleanalyticscdn.com/inline-events.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="bg-base-200">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		max-width: 100vw;
		overflow-x: hidden;
		/* min-height: 100%; */
	}
</style>
